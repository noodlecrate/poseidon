{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../build"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "app/routes.ts",
        "dtos/review-dto.ts",
        "dtos/user-dto.ts",
        "inversify.config.ts",
        "managers/_interfaces/passport.i.ts",
        "managers/authentication-manager.ts",
        "managers/review-manager.ts",
        "managers/user-manager.ts",
        "models/review-model.ts",
        "models/user-model.ts",
        "repositories/_interfaces/generic/get-all-repository.i.ts",
        "repositories/_interfaces/generic/get-by-id-repository.i.ts",
        "repositories/_interfaces/review-repository.i.ts",
        "repositories/_interfaces/user-repository.i.ts",
        "repositories/review-repository.ts",
        "repositories/user-repository.ts",
        "serializers/review-serializer.ts",
        "serializers/user-serializer.ts",
        "server.ts",
        "services/_interfaces/review-service.i.ts",
        "services/_interfaces/service-manager.i.ts",
        "services/review-service.ts",
        "services/service-manager.ts",
        "services/services.namespace.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
